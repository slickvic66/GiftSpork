
<%= link_to "giftSpork", root_path, :class => 'brand' %>
<a class="brand brand-logo" href = "#"></a>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li>
      <%= link_to current_user.profile.fname, user_profile_path(current_user) %>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        My Settings
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to 'Profile Settings', edit_user_profile_path(current_user)%>
        </li>
        <li>
          <%= link_to 'Account Settings', edit_user_registration_path %>
        </li>
      </ul>
    </li>
  <% else %>
    <li>
      <%= link_to 'Sign up', new_user_registration_path %>
    </li>
  <% end %>
  <% if user_signed_in? %>
    <li>
      <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
    </li>
  <% else %>
    <li>
      <%= link_to 'Login', new_user_session_path %>
    </li>
  <% end %>
</ul>